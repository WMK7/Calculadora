<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fundo_calc"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_expresao"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="@color/white"
        android:ellipsize="start"
        android:gravity="end"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/black"
        android:textSize="40sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/txt_resultado"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="@color/white"
        android:ellipsize="end"
        android:gravity="end"
        android:maxLines="1"
        android:text=""
        android:textColor="@color/black"
        android:textSize="30sp"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:layout_margin="5dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/numero_7"
            style="@style/Numeros_Buttons"
            android:text="7"/>
        <Button
            android:id="@+id/numero_8"
            style="@style/Numeros_Buttons"
            android:text="8"/>
        <Button
            android:id="@+id/numero_9"
            style="@style/Numeros_Buttons"
            android:text="9"/>

        <ImageView
            android:id="@+id/backspace"
            style="@style/Numeros_Buttons"
            android:layout_margin="5dp"
            android:background="@color/white"
            android:scaleType="center"
            android:src="@drawable/backspace" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:layout_margin="5dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/numero_6"
            style="@style/Numeros_Buttons"
            android:text="6"/>
        <Button
            android:id="@+id/numero_5"
            style="@style/Numeros_Buttons"
            android:text="5"/>
        <Button
            android:id="@+id/numero_4"
            style="@style/Numeros_Buttons"
            android:text="4"/>
        <Button
            android:id="@+id/sub"
            style="@style/Operaca_Button"
            android:text="-"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:layout_margin="5dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/numero_3"
            style="@style/Numeros_Buttons"
            android:text="3"/>
        <Button
            android:id="@+id/numero_2"
            style="@style/Numeros_Buttons"
            android:text="2"/>
        <Button
            android:id="@+id/numero_1"
            style="@style/Numeros_Buttons"
            android:text="1"/>
        <Button
            android:id="@+id/adicao"
            style="@style/Operaca_Button"
            android:text="+"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:layout_margin="5dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/igual"
            style="@style/Operaca_Button"
            android:text="="/>
        <Button
            android:id="@+id/numero_0"
            style="@style/Numeros_Buttons"
            android:text="0"/>
        <Button
            android:id="@+id/mult"
            style="@style/Operaca_Button"
            android:text="*"/>
        <Button
            android:id="@+id/divisao"
            style="@style/Operaca_Button"
            android:text="/"/>

    </LinearLayout>

</LinearLayout>
